<!DOCTYPE html>
<html>

  <head>
    <%- include('../partials/head'); %>
  </head>

  <body>
    <header>
      <%- include('../partials/header'); %>
    </header>

    <div class="container-fluid text-center">
      <h2>
        Welcome, <%= display_name %>
      </h2>
      <a href="<%= external_urls.spotify %>">Visit Profile</a>
      <div class="row">
        <div class="col-sm float-end">
          <a href="<%= external_urls.spotify %>">
            <img class="img-fluid" src="<%= images[0].url %>" />
          </a>
        </div>
        <div class="col-sm text-left">
          <p>Email: <%= email %>
          </p>
          <p>Country: <%= country %>
          </p>
          <p>Subscription Level: <%= product %>
          </p>
          <p>Follower Count: <%= followers.total %>
          </p>
          <p>Explicit Content Filter: <%= explicit_content.filter_enabled ? 'Enabled' : 'Disabled' %> (<%=
                explicit_content.filter_locked ? 'Locked' : 'Unlocked' %>)</p>
          <p>User ID: <%= id %>
          </p>
          <p>Spotify URI: <%= uri %>
          </p>
        </div>
      </div>
    </div>

    <footer>
      <%- include('../partials/footer'); %>
    </footer>
  </body>

</html>